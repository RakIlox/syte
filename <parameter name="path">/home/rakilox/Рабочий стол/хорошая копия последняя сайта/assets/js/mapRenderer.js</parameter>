<parameter name="content">// mapRenderer.js - 2D –∫–∞—Ä—Ç–∞ –º–∏—Ä–∞ —Å –∞—Ç–∞–∫–∞–º–∏

class MapRenderer {
    constructor(containerId) {
        this.containerId = containerId;
        this.width = 1200;
        this.height = 600;
        this.scale = 150;
        this.projection = null;
        this.path = null;
        this.svg = null;
        this.g = null;
        this.zoom = null;
        this.tooltip = null;
        
        // –¶–≤–µ—Ç–∞ –¥–ª—è —Ç–∏–ø–æ–≤ –∞—Ç–∞–∫
        this.attackColors = {
            ddos: '#ef4444',
            phishing: '#f59e0b',
            malware: '#8b5cf6',
            scanning: '#10b981',
            bruteforce: '#ec4899',
            sqlInjection: '#06b6d4',
            xss: '#f97316',
            mitm: '#84cc16'
        };
        
        this.attackIcons = {
            ddos: 'üî¥',
            phishing: 'üé£',
            malware: 'ü¶†',
            scanning: 'üîç',
            bruteforce: 'üî®',
            sqlInjection: 'üíâ',
            xss: '‚ö°',
            mitm: 'üë§'
        };
    }

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–∞—Ä—Ç—ã
    async init() {
        const container = document.getElementById(this.containerId);
        if (!container) {
            console.error('–ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –∫–∞—Ä—Ç—ã –Ω–µ –Ω–∞–π–¥–µ–Ω:', this.containerId);
            return;
        }
        
        // –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–∑–º–µ—Ä—ã –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
        container.style.width = '100%';
        container.style.height = '600px';
        container.style.minHeight = '600px';
        container.style.display = 'block';
        
        // –ü–æ–ª—É—á–∞–µ–º —Ä–∞–∑–º–µ—Ä—ã
        const rect = container.getBoundingClientRect();
        this.width = Math.max(rect.width, 800);
        this.height = Math.max(rect.height, 500);
        
        console.log('–†–∞–∑–º–µ—Ä—ã –∫–∞—Ä—Ç—ã:', this.width, 'x', this.height);
        
        // –°–æ–∑–¥–∞—ë–º SVG –≤—Ä—É—á–Ω—É—é
        this.createSVG(container);
        
        // –°–æ–∑–¥–∞—ë–º –ø—Ä–æ–µ–∫—Ü–∏—é
        this.setupProjection();
        
        // –ù–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º –∑—É–º
        this.setupZoom();
        
        // –°–æ–∑–¥–∞—ë–º tooltip
        this.createTooltip();
        
        // –ó–∞–≥—Ä—É–∂–∞–µ–º –∫–∞—Ä—Ç—É –º–∏—Ä–∞
        await this.loadWorldMap();
    }

    // –°–æ–∑–¥–∞–Ω–∏–µ SVG —ç–ª–µ–º–µ–Ω—Ç–∞
    createSVG(container) {
        // –û—á–∏—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
        container.innerHTML = '';
        
        // –°–æ–∑–¥–∞—ë–º SVG
        this.svg = document.createElementNS('http://www.w3.org/2000/svg');
        this.svg.setAttribute('width', '100%');
        this.svg.setAttribute('height', '100%');
        this.svg.setAttribute('viewBox', `0 0 ${this.width} ${this.height}`);
        this.svg.style.display = 'block';
        
        // –°–æ–∑–¥–∞—ë–º –≥—Ä—É–ø–ø—É –¥–ª—è –∫–∞—Ä—Ç—ã
        this.g = document.createElementNS('http://www.w3.org/2000/svg', 'g');
        this.g.setAttribute('class', 'map-group');
        
        // –î–æ–±–∞–≤–ª—è–µ–º –≤ DOM
        container.appendChild(this.svg);
        this.svg.appendChild(this.g);
        
        console.log('SVG —Å–æ–∑–¥–∞–Ω:', this.svg);
    }

    // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ø—Ä–æ–µ–∫—Ü–∏–∏
    setupProjection() {
        this.projection = d3.geoMercator()
            .scale(this.scale * (this.width / 1200))
            .translate([this.width / 2, this.height / 1.6]);
        
        this.path = d3.geoPath().projection(this.projection);
    }

    // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –∑—É–º–∞
    setupZoom() {
        if (!this.svg) return;
        
        const zoom = d3.zoom()
            .scaleExtent([0.8, 8])
            .on('zoom', (event) => {
                if (this.g) {
                    this.g.setAttribute('transform', 
                        `translate(${event.transform.x},${event.transform.y}) scale(${event.transform.k})`);
                }
            });
        
        d3.select(this.svg).call(zoom);
    }

    // –°–æ–∑–¥–∞–Ω–∏–µ tooltip
    createTooltip() {
        this.tooltip = d3.select('body')
            .append('div')
            .attr('class', 'attack-tooltip')
            .style('position', 'absolute')
            .style('visibility', 'hidden')
            .style('background', 'rgba(15, 23, 42, 0.95)')
            .style('border', '1px solid rgba(59, 130, 246, 0.5)')
            .style('border-radius', '12px')
            .style('padding', '16px')
            .style('color', '#f8fafc')
            .style('font-size', '14px')
            .style('max-width', '280px')
            .style('z-index', '3000')
            .style('box-shadow', '0 10px 25px rgba(0, 0, 0, 0.3)')
            .style('pointer-events', 'none');
    }

    // –ü–æ–∫–∞–∑–∞—Ç—å tooltip
    showTooltip(event, attack) {
        const sourceName = dataHandler.countryCoordinates[attack.sourceCountry]?.name || attack.sourceCountry;
        const targetName = dataHandler.countryCoordinates[attack.targetCountry]?.name || attack.targetCountry;
        const attackTypeName = dataHandler.attackTypeNames[attack.attackType] || attack.attackType;
        const severityName = dataHandler.severityNames[attack.severity] || attack.severity;
        const sectorName = dataHandler.sectorNames[attack.sector] || attack.sector;
        
        const icon = this.attackIcons[attack.attackType] || '‚ö†Ô∏è';
        const color = this.attackColors[attack.attackType] || '#ef4444';
        
        this.tooltip
            .style('visibility', 'visible')
            .html(`
                <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 10px;">
                    <span style="font-size: 24px;">${icon}</span>
                    <span style="font-weight: 600; font-size: 16px; color: ${color};">${attackTypeName}</span>
                </div>
                <div style="margin-bottom: 8px;">
                    <span style="color: #94a3b8; font-size: 12px;">üî¥ –ò—Å—Ç–æ—á–Ω–∏–∫:</span><br>
                    <strong>${sourceName}</strong>
                </div>
                <div style="margin-bottom: 8px;">
                    <span style="color: #94a3b8; font-size: 12px;">üéØ –¶–µ–ª—å:</span><br>
                    <strong>${targetName}</strong>
                </div>
                <div style="margin-bottom: 8px;">
                    <span style="color: #94a3b8; font-size: 12px;">üè≠ –°–µ–∫—Ç–æ—Ä:</span><br>
                    <strong>${sectorName}</strong>
                </div>
                <div>
                    <span style="color: #94a3b8; font-size: 12px;">‚ö†Ô∏è –û–ø–∞—Å–Ω–æ—Å—Ç—å:</span><br>
                    <span style="background: ${color}; color: white; padding: 2px 8px; border-radius: 10px; font-size: 12px;">${severityName}</span>
                </div>
                <div style="margin-top: 12px; padding-top: 10px; border-top: 1px solid rgba(255,255,255,0.1); font-size: 11px; color: #94a3b8; text-align: center;">
                    –ö–ª–∏–∫–Ω–∏—Ç–µ –¥–ª—è –ø–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–µ–π
                </div>
            `)
            .style('left', (event.pageX + 15) + 'px')
            .style('top', (event.pageY - 10) + 'px');
    }

    // –°–∫—Ä—ã—Ç—å tooltip
    hideTooltip() {
        this.tooltip.style('visibility', 'hidden');
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ–∑–∏—Ü–∏–∏ tooltip
    moveTooltip(event) {
        this.tooltip
            .style('left', (event.pageX + 15) + 'px')
            .style('top', (event.pageY - 10) + 'px');
    }

    // –ó–∞–≥—Ä—É–∑–∫–∞ –∫–∞—Ä—Ç—ã –º–∏—Ä–∞ –∏–∑ —Ñ–∞–π–ª–∞
    async loadWorldMap() {
        try {
            // –ó–∞–≥—Ä—É–∂–∞–µ–º TopoJSON —Ñ–∞–π–ª
            const world = await d3.json('assets/data/world-map.json');
            
            if (!world || !world.objects) {
                throw new Error('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –¥–∞–Ω–Ω—ã—Ö –∫–∞—Ä—Ç—ã');
            }
            
            // –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º TopoJSON –≤ GeoJSON
            const countries = topojson.feature(world, world.objects.countries);
            
            // –†–∏—Å—É–µ–º —Å—Ç—Ä–∞–Ω—ã
            this.drawCountries(countries.features);
            
            console.log('–ö–∞—Ä—Ç–∞ –º–∏—Ä–∞ –∑–∞–≥—Ä—É–∂–µ–Ω–∞');
                
        } catch (error) {
            console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞—Ä—Ç—ã:', error);
            // –†–∏—Å—É–µ–º –ø—Ä–æ—Å—Ç–æ–π —Ñ–æ–Ω –µ—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å
            this.drawBackground();
        }
    }

    // –†–∏—Å–æ–≤–∞–Ω–∏–µ —Å—Ç—Ä–∞–Ω
    drawCountries(countries) {
        if (!this.g || !this.path) return;
        
        countries.forEach(feature => {
            const pathData = this.path(feature);
            if (pathData) {
                const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
                path.setAttribute('d', pathData);
                path.setAttribute('fill', 'rgba(59, 130, 246, 0.3)');
                path.setAttribute('stroke', 'rgba(255, 255, 255, 0.4)');
                path.setAttribute('stroke-width', '0.5');
                path.style.cursor = 'pointer';
                
                // Hover —ç—Ñ—Ñ–µ–∫—Ç—ã
                path.addEventListener('mouseenter', () => {
                    path.setAttribute('fill', 'rgba(59, 130, 246, 0.5)');
                    path.setAttribute('stroke', 'rgba(255, 255, 255, 0.6)');
                });
                
                path.addEventListener('mouseleave', () => {
                    path.setAttribute('fill', 'rgba(59, 130, 246, 0.3)');
                    path.setAttribute('stroke', 'rgba(255, 255, 255, 0.4)');
                });
                
                this.g.appendChild(path);
            }
        });
    }

    // –†–∏—Å–æ–≤–∞–Ω–∏–µ —Ñ–æ–Ω–∞
    drawBackground() {
        if (!this.g) return;
        
        const rect = document.createElementNS('http://www.w3.org/2000/svg', 'rect');
        rect.setAttribute('width', this.width);
        rect.setAttribute('height', this.height);
        rect.setAttribute('fill', 'rgba(15, 23, 42, 0.95)');
        this.g.insertBefore(rect, this.g.firstChild);
    }

    // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –∞—Ç–∞–∫–∏
    drawAttack(attack) {
        const source = dataHandler.getCountryCoordinates(attack.sourceCountry);
        const target = dataHandler.getCountryCoordinates(attack.targetCountry);
        
        if (!source || !target || !this.projection) return null;
        
        // –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã –≤ –ø–∏–∫—Å–µ–ª–∏
        const [x1, y1] = this.projection([source.lon, source.lat]);
        const [x2, y2] = this.projection([target.lon, target.lat]);
        
        if (x1 === null || y1 === null || x2 === null || y2 === null) return null;
        
        const color = this.attackColors[attack.attackType] || '#ef4444';
        
        // –°–æ–∑–¥–∞—ë–º –≥—Ä—É–ø–ø—É –¥–ª—è –∞—Ç–∞–∫–∏
        const group = document.createElementNS('http://www.w3.org/2000/svg', 'g');
        group.setAttribute('class', 'attack-group');
        group.style.cursor = 'pointer';
        
        // –°–æ–∑–¥–∞—ë–º –∫—Ä–∏–≤—É—é –ë–µ–∑—å–µ –¥–ª—è —Å—Ç—Ä–µ–ª–∫–∏
        const midX = (x1 + x2) / 2;
        const midY = (y1 + y2) / 2;
        const dx = x2 - x1;
        const dy = y2 - y1;
        const distance = Math.sqrt(dx * dx + dy * dy);
        const offset = Math.min(distance / 4, 50);
        const perpX = -dy / distance * offset;
        const perpY = dx / distance * offset;
        
        // –ü—É—Ç—å –∫—Ä–∏–≤–æ–π
        const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        path.setAttribute('d', `M${x1},${y1} Q${midX + perpX},${midY + perpY} ${x2},${y2}`);
        path.setAttribute('fill', 'none');
        path.setAttribute('stroke', color);
        path.setAttribute('stroke-width', '2');
        path.setAttribute('stroke-dasharray', '5,3');
        path.setAttribute('opacity', '0.6');
        
        // –¢–æ—á–∫–∞ –∏—Å—Ç–æ—á–Ω–∏–∫–∞
        const sourcePoint = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        sourcePoint.setAttribute('cx', x1);
        sourcePoint.setAttribute('cy', y1);
        sourcePoint.setAttribute('r', '4');
        sourcePoint.setAttribute('fill', color);
        sourcePoint.setAttribute('opacity', '0.8');
        
        // –¢–æ—á–∫–∞ —Ü–µ–ª–∏
        const targetPoint = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        targetPoint.setAttribute('cx', x2);
        targetPoint.setAttribute('cy', y2);
        targetPoint.setAttribute('r', '6');
        targetPoint.setAttribute('fill', color);
        targetPoint.setAttribute('opacity', '0.9');
        
        // –î–æ–±–∞–≤–ª—è–µ–º –≤ –≥—Ä—É–ø–ø—É
        group.appendChild(path);
        group.appendChild(sourcePoint);
        group.appendChild(targetPoint);
        
        // Hover —ç—Ñ—Ñ–µ–∫—Ç—ã
        const showTooltip = (e) => {
            path.setAttribute('stroke-width', '4');
            path.setAttribute('opacity', '1');
            sourcePoint.setAttribute('r', '6');
            targetPoint.setAttribute('r', '8');
            this.showTooltip(e, attack);
        };
        
        const hideTooltipFn = () => {
            path.setAttribute('stroke-width', '2');
            path.setAttribute('opacity', '0.6');
            sourcePoint.setAttribute('r', '4');
            targetPoint.setAttribute('r', '6');
            this.hideTooltip();
        };
        
        group.addEventListener('mouseenter', showTooltip);
        group.addEventListener('mousemove', (e) => {
            this.tooltip.style('left', (e.pageX + 15) + 'px');
            this.tooltip.style('top', (e.pageY - 10) + 'px');
        });
        group.addEventListener('mouseleave', hideTooltipFn);
        
        // –ö–ª–∏–∫ –¥–ª—è –¥–µ—Ç–∞–ª–µ–π
        group.addEventListener('click', () => {
            document.dispatchEvent(new CustomEvent('showAttackDetails', {
                detail: attack
            }));
        });
        
        if (this.g) {
            this.g.appendChild(group);
        }
        
        return group;
    }

    // –û—á–∏—Å—Ç–∫–∞ –≤—Å–µ—Ö –∞—Ç–∞–∫
    clearAttacks() {
        if (!this.g) return;
        
        const attacks = this.g.querySelectorAll('.attack-group');
        attacks.forEach(el => el.remove());
    }

    // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –≤—Å–µ—Ö –∞—Ç–∞–∫
    drawAttacks(attacks) {
        this.clearAttacks();
        
        if (!attacks || !Array.isArray(attacks)) return;
        
        attacks.forEach(attack => {
            this.drawAttack(attack);
        });
    }

    // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∑—É–º–æ–º
    zoomIn() {
        if (!this.svg) return;
        d3.select(this.svg).transition().call(d3.zoom().scaleBy, 1.5);
    }

    zoomOut() {
        if (!this.svg) return;
        d3.select(this.svg).transition().call(d3.zoom().scaleBy, 0.75);
    }

    resetView() {
        if (!this.svg) return;
        d3.select(this.svg)
            .transition()
            .duration(750)
            .call(d3.zoom().transform, d3.zoomIdentity);
    }
}

// –°–æ–∑–¥–∞–µ–º –≥–ª–æ–±–∞–ª—å–Ω—ã–π —ç–∫–∑–µ–º–ø–ª—è—Ä
let mapRenderer = null;
</parameter>
